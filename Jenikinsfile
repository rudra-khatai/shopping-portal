pipeline{

    agent any

// uncomment the following lines by removing /* and */ to enable
    tools{
    nodejs   ‘nodejs’' 
    }
  

    stages{
        stage('build'){
            steps{
                echo 'this is to build the app’
                sh 'npm install'
            }
        }
        stage('test'){
            steps{
                echo 'this is to test the app’
                sh 'npm test'
            }
        }
        stage('package'){
            steps{
                echo 'this is to package the app'
                sh 'npm run package'                
            }
        }
    }
    
    post{
        always{
            echo 'Hello there…this my first pipeline through code… '
        }
        
    }
    
}



